<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Identitas">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="20dp"
        android:src="@drawable/profil" />

    <TextView
        android:id="@+id/textnama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Ismayani Setyaningrum"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textnim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textnama"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="10119265"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textkelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textnim"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="IF-7"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textdeskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textkelas"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="ismayani.10119265@mahasiswa.unikom.ac.id"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textdeskripsi"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/windowBackground"
        android:text="Logout" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/pena_navigasi"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>